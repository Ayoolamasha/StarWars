<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.StarWars.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/color_primary</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/color_primary
        </item>
        <!--    <item name="windowSplashScreenAnimatedIcon">@drawable/</item>-->
        <item name="windowSplashScreenAnimationDuration">500</item>
        <!--                <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">@drawable/ic_vale_website_logo</item>-->
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">300</item>
        <item name="postSplashScreenTheme">@style/Theme.StarWars.DayNight</item>

    </style>


    <style name="Theme.StarWars.DayNight" parent="Theme.StarWars.MainTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_secondary</item>
        <item name="colorAccent">@color/white</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.StarWars.MainTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="scrimBackground">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>

        <!--System/Platform attributes-->
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <!-- Customize your theme here. -->


        <!--Typography-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.StarWars.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.StarWars.Headline2</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.StarWars.Title</item>
        <item name="textAppearanceBody1">@style/TextAppearance.StarWars.BodyText1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.StarWars.BodyText2</item>
        <item name="textAppearanceOverline">@style/TextAppearance.StarWars.TextButton</item>
        <item name="textAppearanceButton">@style/TextAppearance.StarWars.Button</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.StarWars.SubTitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.StarWars.SubTitle2</item>

    </style>


    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/radius_30</item>
        <item name="cornerSizeTopLeft">@dimen/radius_30</item>
        <item name="cornerSizeBottomRight">@dimen/radius_0</item>
        <item name="cornerSizeBottomLeft">@dimen/radius_0</item>
    </style>

    <style name="Theme.App.DatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent
        </item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>


    <style name="Theme.StarWars.AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="Theme.StarWars.CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/body_text_size_16</item>
        <item name="fontFamily">@font/fira_sans_semi_bold</item>
        <item name="android:fontFamily">@font/fira_sans_semi_bold</item>
        <item name="lineHeight">@dimen/line_height_18</item>
        <item name="fontWeight">@integer/font_weight_400</item>
    </style>

    <style name="Theme.StarWars.Dialog" parent="Theme.StarWars.MainTheme">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="fontFamily">@font/fira_sans_semi_bold</item>
        <item name="android:fontFamily">@font/fira_sans_semi_bold</item>
        <item name="buttonTint">@color/color_primary</item>
    </style>

    <style name="Theme.App.SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryHint">@string/search_query</item>
        <item name="android:fontFamily">@font/fira_sans_regular</item>
        <item name="queryBackground">@drawable/search_background</item>
        <item name="android:background">@drawable/search_background</item>
        <item name="iconifiedByDefault">false</item>
        <item name="closeIcon">@drawable/ic_close_blue</item>
    </style>


    <style name="Widget.CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/caption_text_size_12_dp</item>
        <item name="fontFamily">@font/fira_sans_medium</item>
        <item name="android:fontFamily">@font/fira_sans_medium</item>
        <item name="fontWeight">@integer/font_weight_400</item>
    </style>


    <style name="Theme.AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="Widget.StarWars.WhiteDialogCardsBg" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/padding_20</item>
        <item name="android:background">@drawable/white_dialog_card_background</item>
    </style>


</resources>